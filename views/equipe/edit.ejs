            </tr>

            <% if(data.atletas){

                var options = ["Masculino","Feminino","Master","SÃªnior","Juvenil","Incentivado"];

            for(var i = 0;i < data.atletas.length;i++) { %>

            <tr>
                <td><%=data.atletas[i].id%></td>
                <td><%=data.atletas[i].nome%></td>
                <td><%=options[data.atletas[i].categoria]%></td>
                <td><%=data.atletas[i].nome_equipe%></td>

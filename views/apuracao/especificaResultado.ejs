<%- include('layouts/header.ejs') %>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header2">
            <small>Apuração da prova de Pesca Específica</small>
        </h1>
    </div>
</div>
<div class="page-data">
    <div class="data-table">
        <table class="table table-striped" style="width: 1500px">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Nº</th>
                    <th>Equipe</th>
                    <th>Atleta</th>
                    <th>Nº Peças</th>
                    <th>Peso Total</th>
                    <th>Maior Peça</th>
                    <th>Pontos</th>
                    <th>Cosapyl</th>
                    <!--<th>Nome do Peixe</th>-->
                </tr>
            </thead>
            <tbody>

                <% if(data){

                    var options = ["Masculino","Feminino","Master","Sênior","Juvenil","Incentivado"];

                for(var i = 0;i < data.length;i++) { %>

                <tr>
                    <td><%=options[data[i].categoria]%></td>
                    <td><%=data[i].atleta_id%></td>
                    <td><%=data[i].nome_equipe%></td>
                    <td><%=data[i].nome%></td>
                    <td><%=data[i].total_pecas_especifica%></td>
                    <td><%=data[i].peso_total_especifica%></td>
                    <td><%=data[i].maior_peca_especifica%></td>
                    <td><%=((data[i].total_pecas_especifica*2)+Math.ceil(data[i].peso_total_especifica/1000 * 10)).toFixed(0)%></td>
                    <td><%=data[i].cosapyl_especifica%></td>
                    <!--<td><input type="text" id="nome_maior_peca_especifica_<%=data[i].id%>" value="<%=data[i].nome_maior_peca_especifica%>" onchange="registro_valor('nome_maior_peca_especifica',document.getElementById('nome_maior_peca_especifica_<%=data[i].id%>').value,<%=data[i].id%>)"></td>-->
                </tr>
                <% }

                }else{ %>
                <tr>
                    <td colspan="6">Sem Atletas</td>
                </tr>
                <% } %>
            </tbody>


        </table>
    </div>
</div>

<%- include('layouts/footer.ejs') %>

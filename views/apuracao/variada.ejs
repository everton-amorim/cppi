<%- include('layouts/header.ejs') %>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header2">
            <small>Apuração da prova de Pesca Variada</small>
        </h1>
    </div>
</div>
<div class="page-data">
    <div class="data-table">
        <table class="table table-striped" style="width: 1500px">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Nº</th>
                    <th>Equipe</th>
                    <th>Nome</th>
                    <th>Nº Peças</th>
                    <th>Peso Total</th>
                    <th>Maior Peça</th>
                    <th>Pontos</th>
                    <th>Classificação</th>
                </tr>
            </thead>
            <tbody>

                <% if(data){

                    var options = ["Masculino","Feminino","Master","Sênior","Juvenil","Incentivado"];

                for(var i = 0;i < data.length;i++) {
                    var pontos = ((data[i].total_pecas_variada*2)+Math.ceil(data[i].peso_total_variada/1000 * 10)).toFixed(0)%>

                <tr>
                    <td><%=options[data[i].categoria]%></td>
                    <td><%=data[i].atleta_id%></td>
                    <td><%=data[i].nome_equipe%></td>
                    <td><%=data[i].nome%></td>
                    <td><input type="text" style="width: 100px" id="total_pecas_variada_<%=data[i].id%>" value="<%=data[i].total_pecas_variada%>" onchange="registro_valor('total_pecas_variada',document.getElementById('total_pecas_variada_<%=data[i].id%>').value,<%=data[i].id%>);calculaPontos(document.getElementById('total_pecas_variada_<%=data[i].id%>').value,document.getElementById('peso_total_variada_<%=data[i].id%>').value,'pontos<%=data[i].id%>');"></td>
                    <td><input type="text" style="width: 100px" id="peso_total_variada_<%=data[i].id%>" value="<%=data[i].peso_total_variada%>" onchange="registro_valor('peso_total_variada',document.getElementById('peso_total_variada_<%=data[i].id%>').value,<%=data[i].id%>);calculaPontos(document.getElementById('total_pecas_variada_<%=data[i].id%>').value,document.getElementById('peso_total_variada_<%=data[i].id%>').value,'pontos<%=data[i].id%>');"></td>
                    <td><input type="text" style="width: 100px" id="maior_peca_variada_<%=data[i].id%>" value="<%=data[i].maior_peca_variada%>" onchange="registro_valor('maior_peca_variada',document.getElementById('maior_peca_variada_<%=data[i].id%>').value,<%=data[i].id%>)"></td>
                    <td><input type="text" style="width: 100px" readonly="true" id="pontos<%=data[i].id%>" value="<%=pontos%>"></td>
                    <td><%=(pontos==0?'-':data[i].posicao_variada)%></td>
                </tr>
                <% }

                }else{ %>
                <tr>
                    <td colspan="6">Sem Atletas</td>
                </tr>
                <% } %>
            </tbody>


        </table>
    </div>
</div>

<%- include('layouts/footer.ejs') %>

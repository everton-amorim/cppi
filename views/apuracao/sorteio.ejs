    <input type="button" value="Lançamento" onclick="printLancamento();"/>-->
</div>
<div class="page-data">
    <div class="data-table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Equipe</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Nº</th>
                    <th>Sorteio Pesca</th>
                    <!--<th>2º Sorteio Pesca Variada</th>
                    <th>1º Sorteio Pesca Específica</th>
                    <th>2º Sorteio Pesca Específica</th>-->
                    <th>Sorteio Lançamento</th>
                </tr>
            </thead>
            <tbody>

                <% if(data){

                    var options = ["Masculino","Feminino","Master","Sênior","Juvenil","Incentivado"];

                for(var i = 0;i < data.length;i++) { %>

                <tr>
                    <td><%=data[i].nome_equipe%></td>
                    <td><%=data[i].nome%></td>
                    <td><%=options[data[i].categoria]%></td>
                    <td><%=data[i].atleta_id%></td>
                    <td> <input type="text" id="sorteio_1a_etapa_variada_<%=data[i].id%>" value="<%=data[i].sorteio_1a_etapa_variada%>" onchange="registro_valor('sorteio_1a_etapa_variada',document.getElementById('sorteio_1a_etapa_variada_<%=data[i].id%>').value,<%=data[i].id%>)"></td>
                    <!--<td> <input type="text" id="sorteio_2a_etapa_variada_<%=data[i].id%>" value="<%=data[i].sorteio_2a_etapa_variada%>" onchange="registro_valor('sorteio_2a_etapa_variada',document.getElementById('sorteio_2a_etapa_variada_<%=data[i].id%>').value,<%=data[i].id%>)"></td>
                    <td><input type="text" id="sorteio_1a_etapa_especifica_<%=data[i].id%>" value="<%=data[i].sorteio_1a_etapa_especifica%>" onchange="registro_valor('sorteio_1a_etapa_especifica',document.getElementById('sorteio_1a_etapa_especifica_<%=data[i].id%>').value,<%=data[i].id%>)"></td>
                    <td><input type="text" id="sorteio_2a_etapa_especifica_<%=data[i].id%>" value="<%=data[i].sorteio_2a_etapa_especifica%>" onchange="registro_valor('sorteio_2a_etapa_especifica',document.getElementById('sorteio_2a_etapa_especifica_<%=data[i].id%>').value,<%=data[i].id%>)"></td>-->
                        <!--<%=data[i].sorteio_1a_etapa_variada%></td>
                    <td><%=data[i].sorteio_2a_etapa_variada%></td>
                    <td><%=data[i].sorteio_1a_etapa_especifica%></td>
                    <td><%=data[i].sorteio_2a_etapa_especifica%></td>
                    <td><%=data[i].sorteio_lancamento%></td>-->

                    <td><input type="text" id="sorteio_lancamento_<%=data[i].id%>" value="<%=data[i].sorteio_lancamento%>" onchange="registro_valor('sorteio_lancamento',document.getElementById('sorteio_lancamento_<%=data[i].id%>').value,<%=data[i].id%>)"></td>
                </tr>
                <% }

                }else{ %>
                <tr>
                    <td colspan="6">Sem Atletas</td>
                </tr>
                <% } %>
            </tbody>


        </table>
    </div>
</div>

